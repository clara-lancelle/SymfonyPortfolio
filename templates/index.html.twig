{% extends 'base.html.twig' %}

{% block title %}Portfolio - Lancelle Clara
{% endblock %}

{% block body %}
	<section class="block presentation">
		<h2 class="block__title">
			About me
		</h2>
		<div class="block__divider"></div>
		<div class="body">
			<div><img src="{{ asset('uploads/presentation/' ~ presentation.image)}}" alt="description"></div>
			<div>
				<p>{{ presentation.text }}</p>
			</div>
			<div>
				<a href="{{ asset('uploads/presentation/' ~ presentation.cv)}}" class="btn" target="_blank" title="Lancelle Clara CV">
					My CV
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-up" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M8 10a.5.5 0 0 0 .5-.5V3.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 3.707V9.5a.5.5 0 0 0 .5.5zm-7 2.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13a.5.5 0 0 1-.5-.5z"/>
					</svg>
				</a>
			</div>
		</section>
		<section class="block skills">
			<h2 class="block__title">
				Skills
			</h2>
			<div class="block__divider"></div>
			<div class="body">
				{% for skill in skills %}
					<div class="skills__card">
						<figure>
							<img src="{{ asset('uploads/skills/' ~ skill.image)}}" alt="{{ skill.name }}">
						</figure>
						<h6>{{skill.name}}</h6>
					</div>
				{% endfor %}
			</div>
		</section>
		<section class="block degrees">
			<h2 class="block__title">
				Degrees
			</h2>
			<div class="block__divider"></div>
			<div class="body">
				{% for degree in degrees %}
					<div class="degrees__card">
						<figure>
							<img src="{{ asset('uploads/degrees/' ~ degree.image)}}" alt="{{ degree.name }}">
						</figure>
						<h6>{{degree.name}}</h6>
					</div>
				{% endfor %}
			</div>
		</section>
		{# <section class="block achievements">
											<h2 class="block__title">
												Achievements
											</h2>
